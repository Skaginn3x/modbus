{
  "version": 6,
  "configurePresets": [
    {
      "name": "conf-base",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "generator": "Ninja",
      "cacheVariables": {
        "VCPKG_INSTALLED_DIR": "${fileDir}/vcpkg-sysroot",
        "VCPKG_OVERLAY_TRIPLETS": "${fileDir}/vcpkg-overlays/triplets",
        "CMAKE_TOOLCHAIN_FILE": "/opt/vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "conf-gcc",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-linux-gcc",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${fileDir}/cmake/toolchains/x64-linux-gcc.cmake"
      },
      "inherits": [
        "conf-base"
      ]
    },
    {
      "name": "conf-clang",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-linux-clang",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${fileDir}/cmake/toolchains/x64-linux-clang.cmake"
      },
      "inherits": [
        "conf-base"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "build-gcc",
      "configurePreset": "conf-gcc"
    },
    {
      "name": "build-clang",
      "configurePreset": "conf-clang"
    }
  ],
  "testPresets": [
    {
      "name": "test-common",
      "hidden": true,
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error", "stopOnFailure": true}
    },
    {
      "name": "test-gcc",
      "configurePreset": "conf-gcc",
      "inherits": ["test-common"]
    },
    {
      "name": "test-clang",
      "configurePreset": "conf-clang",
      "inherits": ["test-common"]
    }
  ]
}
