{
  "version": 6,
  "configurePresets": [
    {
      "name": "conf-ci",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "VCPKG_INSTALLED_DIR": "${fileDir}/vcpkg-sysroot"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-ci",
      "configurePreset": "conf-ci"
    }
  ],
  "testPresets": [
    {
      "name": "test-common",
      "hidden": true,
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error", "stopOnFailure": true}
    },
    {
      "name": "test-ci",
      "configurePreset": "conf-ci",
      "inherits": ["test-common"]
    }
  ]
}
