{
  "version": 6,
  "configurePresets": [
    {
      "name": "conf-ci",
      "binaryDir": "${sourceDir}/build/${presetName}"
    }
  ],
  "buildPresets": [
    {
      "name": "build-ci",
      "configurePreset": "conf-ci"
    }
  ],
  "testPresets": [
    {
      "name": "test-ci",
      "hidden": true,
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error", "stopOnFailure": true}
    }
  ]
}
